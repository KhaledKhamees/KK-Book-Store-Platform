@model List<MVCProject2.Models.Models.Product>


<style>
    .container {
        margin-top: 20px;
    }

    .product-card {
        display: inline-block;
        width: 20%; /* Smaller width */
        margin: 10px;
        padding: 10px; /* Reduced padding */
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s ease-in-out;
    }

        .product-card:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        .product-card h3 {
            font-size: 1rem; /* Smaller font size */
            color: #333;
        }

        .product-card p {
            font-size: 0.9rem; /* Reduced font size */
            color: #666;
        }

        .product-card img {
            max-width: 100%;
            height: 150px; /* Adjust height for smaller images */
            object-fit: cover;
            margin-bottom: 10px; /* Less margin */
        }

    .product-info {
        margin-bottom: 10px; /* Reduced margin */
    }

    h2 {
        color: #333;
    }

    .row {
        display: flex;
        flex-wrap: wrap;
    }
</style>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-md-12">
            <h2>Available Books</h2>
        </div>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="product-card col-md-2">
                <img src="@item.ImageUrl" alt="@item.Name" />

                <div class="product-info">
                    <h3>@item.Name</h3>
                    <p><strong>Author:</strong> @item.Author</p>
                    <p><strong>Price:</strong> $@item.ListPrice</p>
                </div>

                <a href="@Url.Action("Details", "Home", new { id = item.Id })" class="btn btn-primary">View Details</a>
            </div>
        }
    </div>
</div>
