@model List<MVCProject2.Models.Models.OrderHeader>

<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
        font-weight: bold;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tr:hover {
        background-color: #f1f1f1;
    }

    h2 {
        color: #333;
        text-align: left;
    }

    .btn-create-category {
        float: right;
    }

    /* Custom icon size */
    .btn i {
        font-size: 1.5rem; /* Increase icon size */
    }
</style>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-md-6">
            <h2>Order List</h2>
        </div>
        <div class="col-md-6 text-end">
            
        </div>
    </div>

    <table class="table table-hover table-bordered mt-4" style="width:100%">
        <thead class="thead-light">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Phone Number</th>
                 <th scope="col">Email</th>
                 <th scope="col">Status</th> 
                <th scope="col">Total</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="9" class="text-center">No products available.</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.ApplicationUser.Email</td>
                        <td>@item.PaymentStatus</td>
                        <td>@item.OrderTotal</td>

                        <td>
                            <div class="w-100 btn-group" role="group">
                                @* <a asp-controller="Order" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a> *@
                                <a asp-controller="Order" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">
                                    <i class="bi bi-pencil-square"></i> Details
                                </a>
                                <form asp-controller="Order" asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this product?');">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="bi bi-trash3-fill"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/Product.js"></script>
}
