@model Category
<h1>Create Category</h1>

<style>
    form {
        margin-top: 20px;
    }

    .form-control {
        margin-bottom: 15px;
        width: 100%;
        max-width: 600px;
    }

    .btn-primary {
        margin-right: 10px;
    }

    .btn-back {
        margin-left: 10px;
    }

    h1 {
        text-align: center;
        margin-bottom: 20px;
        color: #333;
    }

    .text-danger {
        color: red;
    }
</style>

<div class="container">
    <form asp-action="SaveNew" method="post">
        <div class="form-group">
            <label for="Name">Category Name</label>
            <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter category name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
         <div asp-validation-summary="All"></div>
         <div class="form-group">
            <label for="DisplayOrder">Display Order</label>
            <input type="number" class="form-control" id="DisplayOrder" name="DisplayOrder" placeholder="Enter display order" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary btn-back">Back to Categories List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
