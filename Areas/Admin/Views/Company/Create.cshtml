@model MVCProject2.Models.Models.Company

<div class="container">
    <h1>Create New Company</h1>

    <form asp-action="SaveNew" method="post">
        <div class="form-group">
            <label asp-for="Name">Company Name</label>
            <input type="text" class="form-control" asp-for="Name" placeholder="Enter Company Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StreetAdress">Street Address</label>
            <input type="text" class="form-control" asp-for="StreetAdress" placeholder="Enter Street Address" />
            <span asp-validation-for="StreetAdress" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="City">City</label>
            <input type="text" class="form-control" asp-for="City" placeholder="Enter City" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="State">State</label>
            <input type="text" class="form-control" asp-for="State" placeholder="Enter State" />
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PostelCode">Postal Code</label>
            <input type="text" class="form-control" asp-for="PostelCode" placeholder="Enter Postal Code" />
            <span asp-validation-for="PostelCode" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber">Phone Number</label>
            <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Enter Phone Number" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
