@model List<MVCProject2.Models.Models.Company>

<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
        font-weight: bold;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tr:hover {
        background-color: #f1f1f1;
    }

    h2 {
        color: #333;
        text-align: left;
    }

    .btn-create-category {
        float: right;
    }

    .btn i {
        font-size: 1.5rem; /* Increase icon size */
    }
</style>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-md-6">
            <h2>Companies List</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Company" asp-action="Create" class="btn btn-primary btn-create-category">
                <i class="bi bi-plus-circle"></i> Create New Company
            </a>
        </div>
    </div>

    <table class="table table-hover table-bordered mt-4" style="width:100%">
        <thead class="thead-light">
            <tr>
                <th scope="col">Company ID</th>
                <th scope="col">Company Name</th>
                <th scope="col">Street Address</th>
                <th scope="col">City</th>
                <th scope="col">State</th>
                <th scope="col">Postal Code</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.StreetAdress</td>
                    <td>@item.City</td>
                    <td>@item.State</td>
                    <td>@item.PostelCode</td>
                    <td>@item.PhoneNumber</td>
                    <td>
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Company" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <form asp-controller="Company" asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this company?');">
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash3-fill"></i> Delete
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    <script src="~/js/Company.js"></script>
}
