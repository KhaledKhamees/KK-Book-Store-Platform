@model MVCProject2.Models.Models.Product

<div class="container">
    <h1>Create New Product</h1>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="Name">Product Name</label>
            <input type="text" class="form-control" asp-for="Name" placeholder="Enter Product Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Description">Product Description</label>
            <input type="text" class="form-control" asp-for="Description" placeholder="Enter Product Description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="ISBN">Product ISBN</label>
            <input type="text" class="form-control" asp-for="ISBN" placeholder="Enter Product ISBN" />
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Author">Product Author</label>
            <input type="text" class="form-control" asp-for="Author" placeholder="Enter Product Author" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="ListPrice">List Price</label>
            <input type="text" class="form-control" asp-for="ListPrice" placeholder="Enter List Price" />
            <span asp-validation-for="ListPrice" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Price">Price 1-50 units</label>
            <input type="text" class="form-control" asp-for="Price" placeholder="Enter Price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Price50">Price 50+ units</label>
            <input type="text" class="form-control" asp-for="Price50" placeholder="Enter Price for 50+ units" />
            <span asp-validation-for="Price50" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Price100">Price 100+ units</label>
            <input type="text" class="form-control" asp-for="Price100" placeholder="Enter Price for 100+ units" />
            <span asp-validation-for="Price100" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="CategoryId">Category</label>
            <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-control">
                <option disabled selected>-- Select Category --</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label for="ImageUrl">Image</label>
            <input type="file" name="file" class="form-control" asp-for="ImageUrl" />
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
