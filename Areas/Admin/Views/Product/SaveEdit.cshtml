@model MVCProject2.Models.Models.Product

<div class="container">
    <h1>Edit Product</h1>

    <form asp-action="SaveEdit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ImageUrl"/>

        <div class="row">
            <div class="col-8">

                <div class="form-group">
                    <label asp-for="Name">Product Name</label>
                    <input type="text" class="form-control" asp-for="Name" placeholder="Enter Product Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description">Product Description</label>
                    <textarea class="form-control" asp-for="Description" placeholder="Enter Product Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ISBN">Product ISBN</label>
                    <input type="text" class="form-control" asp-for="ISBN" placeholder="Enter Product ISBN" />
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Author">Product Author</label>
                    <input type="text" class="form-control" asp-for="Author" placeholder="Enter Product Author" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ListPrice">List Price</label>
                    <input type="number" class="form-control" asp-for="ListPrice" placeholder="Enter List Price" step="0.01" />
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price">Price for 1-50 units</label>
                    <input type="number" class="form-control" asp-for="Price" placeholder="Enter Price" step="0.01" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price50">Price for 50+ units</label>
                    <input type="number" class="form-control" asp-for="Price50" placeholder="Enter Price for 50+ units" step="0.01" />
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price100">Price for 100+ units</label>
                    <input type="number" class="form-control" asp-for="Price100" placeholder="Enter Price for 100+ units" step="0.01" />
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="ImageUrl">Image</label>
                    <input type="file" name="file" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
            <div class="col-4 text-center">
                <img src="@Model.ImageUrl" alt="Product Image" class="img-fluid" />
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
